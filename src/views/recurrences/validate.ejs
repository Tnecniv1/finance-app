<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Validation des r√©currences - Fidess</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .header h1 {
            color: #333;
            font-size: 28px;
            margin-bottom: 10px;
        }

        .header p {
            color: #666;
            font-size: 16px;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #5568d3;
        }

        .btn-success {
            background: #10b981;
            color: white;
        }

        .btn-success:hover {
            background: #059669;
        }

        .btn-danger {
            background: #ef4444;
            color: white;
        }

        .btn-danger:hover {
            background: #dc2626;
        }

        .stats {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .stat-box {
            flex: 1;
            padding: 15px;
            background: #f5f7ff;
            border-radius: 10px;
            text-align: center;
        }

        .stat-box .number {
            font-size: 32px;
            font-weight: bold;
            color: #667eea;
        }

        .stat-box .label {
            font-size: 14px;
            color: #666;
            margin-top: 5px;
        }

        .recurrence-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border-left: 5px solid #667eea;
        }

        .recurrence-card.validated {
            border-left-color: #10b981;
            background: #f0fdf4;
        }

        .recurrence-card.rejected {
            border-left-color: #ef4444;
            background: #fef2f2;
            opacity: 0.6;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 20px;
        }

        .card-title {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .card-title h3 {
            font-size: 20px;
            color: #333;
        }

        .confidence-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
        }

        .confidence-high {
            background: #d1fae5;
            color: #065f46;
        }

        .confidence-medium {
            background: #fef3c7;
            color: #92400e;
        }

        .card-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .info-label {
            font-size: 12px;
            color: #666;
            text-transform: uppercase;
            font-weight: 600;
        }

        .info-value {
            font-size: 16px;
            color: #333;
            font-weight: 600;
        }

        .transactions-preview {
            background: #f9fafb;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .transactions-preview h4 {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

        .transaction-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #e5e7eb;
            font-size: 14px;
        }

        .transaction-item:last-child {
            border-bottom: none;
        }

        .transaction-date {
            color: #666;
        }

        .transaction-amount {
            font-weight: 600;
            color: #333;
        }

        .show-more {
            color: #667eea;
            cursor: pointer;
            font-size: 14px;
            text-decoration: underline;
            margin-top: 10px;
            display: inline-block;
        }

        .actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .status-message {
            padding: 10px 15px;
            border-radius: 8px;
            font-weight: 600;
        }

        .status-validated {
            background: #d1fae5;
            color: #065f46;
        }

        .status-rejected {
            background: #fee2e2;
            color: #991b1b;
        }

        .empty-state {
            background: white;
            padding: 60px 30px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .empty-state h2 {
            color: #333;
            margin-bottom: 10px;
        }

        .empty-state p {
            color: #666;
            margin-bottom: 20px;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: white;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar-simple', { currentPage: 'recurrences', user: user }) %>

    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>ü§ñ R√©currences d√©tect√©es automatiquement</h1>
            <p>Validez ou corrigez les transactions r√©currentes identifi√©es par notre algorithme</p>
            
            <div class="action-buttons">
                <button class="btn btn-primary" onclick="runDetection()">
                    üîÑ Relancer la d√©tection
                </button>
                <a href="/transactions" class="btn" style="background: #e0e7ff; color: #667eea;">
                    ‚Üê Retour aux transactions
                </a>
            </div>

            <div class="stats">
                <div class="stat-box">
                    <div class="number"><%= detections.length %></div>
                    <div class="label">D√©tect√©es</div>
                </div>
                <div class="stat-box">
                    <div class="number"><%= validated.length %></div>
                    <div class="label">Valid√©es</div>
                </div>
            </div>
        </div>

        <!-- Liste des d√©tections -->
        <% if (detections.length === 0) { %>
            <div class="empty-state">
                <h2>Aucune r√©currence d√©tect√©e</h2>
                <p>Importez plus de transactions ou cliquez sur "Relancer la d√©tection"</p>
                <button class="btn btn-primary" onclick="runDetection()">
                    üîç Lancer la d√©tection
                </button>
            </div>
        <% } else { %>
            <% detections.forEach((detection, index) => { %>
                <div class="recurrence-card" id="detection-<%= detection.id %>" data-status="pending">
                    <div class="card-header">
                        <div class="card-title">
                            <span class="status-icon">‚è≥</span>
                            <h3><%= detection.nom_detecte %></h3>
                            <span class="confidence-badge <%= detection.confiance >= 0.85 ? 'confidence-high' : 'confidence-medium' %>">
                                Confiance : <%= Math.round(detection.confiance * 100) %>%
                            </span>
                        </div>
                    </div>

                    <div class="card-info">
                        <div class="info-item">
                            <span class="info-label">Montant moyen</span>
                            <span class="info-value"><%= detection.montant_moyen.toFixed(2) %> ‚Ç¨</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Variabilit√©</span>
                            <span class="info-value">
                                <%= detection.montant_ecart_type <= 1 ? 'Fixe' : '¬±' + Math.round((detection.montant_ecart_type / detection.montant_moyen) * 100) + '%' %>
                            </span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Fr√©quence</span>
                            <span class="info-value">
                                <% if (detection.frequence === 'weekly') { %>
                                    Hebdomadaire
                                <% } else if (detection.frequence === 'monthly') { %>
                                    Mensuelle (tous les <%= detection.jour_reference %>)
                                <% } else if (detection.frequence === 'yearly') { %>
                                    Annuelle
                                <% } else { %>
                                    <%= detection.frequence %>
                                <% } %>
                            </span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Occurrences</span>
                            <span class="info-value"><%= detection.nb_occurrences %> transactions</span>
                        </div>
                    </div>

                    <div class="transactions-preview">
                        <h4>üìã Transactions associ√©es (<%= Math.min(5, detection.transactions.length) %> sur <%= detection.transactions.length %>)</h4>
                        <% detection.transactions.slice(0, 5).forEach(tx => { %>
                            <div class="transaction-item">
                                <span class="transaction-date">
                                    <%= new Date(tx.date).toLocaleDateString('fr-FR') %>
                                </span>
                                <span class="transaction-amount">
                                    <%= parseFloat(tx.montant).toFixed(2) %> ‚Ç¨
                                </span>
                            </div>
                        <% }); %>
                        <% if (detection.transactions.length > 5) { %>
                            <span class="show-more" onclick="toggleTransactions(<%= detection.id %>)">
                                Voir les <%= detection.transactions.length - 5 %> autres ‚Üí
                            </span>
                        <% } %>
                    </div>

                    <div class="actions" id="actions-<%= detection.id %>">
                        <button class="btn btn-danger" onclick="rejectDetection(<%= detection.id %>)">
                            ‚ùå Ignorer
                        </button>
                        <button class="btn btn-success" onclick="validateDetection(<%= detection.id %>)">
                            ‚úÖ Valider
                        </button>
                    </div>
                </div>
            <% }); %>
        <% } %>

        <!-- R√©currences d√©j√† valid√©es -->
        <% if (validated.length > 0) { %>
            <div class="header" style="margin-top: 40px;">
                <h2>‚úÖ R√©currences valid√©es (<%= validated.length %>)</h2>
            </div>

            <% validated.forEach(rec => { %>
                <div class="recurrence-card validated">
                    <div class="card-header">
                        <div class="card-title">
                            <span class="status-icon">‚úÖ</span>
                            <h3><%= rec.nom %></h3>
                        </div>
                    </div>

                    <div class="card-info">
                        <div class="info-item">
                            <span class="info-label">Montant</span>
                            <span class="info-value"><%= rec.montant_moyen.toFixed(2) %> ‚Ç¨</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Fr√©quence</span>
                            <span class="info-value">
                                <% if (rec.frequence === 'monthly') { %>
                                    Tous les <%= rec.jour_mois %> du mois
                                <% } else { %>
                                    <%= rec.frequence %>
                                <% } %>
                            </span>
                        </div>
                    </div>

                    <div class="actions">
                        <button class="btn btn-danger" onclick="deleteRecurrence(<%= rec.id %>)">
                            üóëÔ∏è Supprimer
                        </button>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <script>
        // Lancer la d√©tection
        async function runDetection() {
            const loadingDiv = document.createElement('div');
            loadingDiv.className = 'loading';
            loadingDiv.textContent = 'üîç D√©tection en cours...';
            document.body.appendChild(loadingDiv);

            try {
                const res = await fetch('/recurrences/api/detect', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await res.json();

                if (data.success) {
                    alert(`‚úÖ ${data.message}`);
                    window.location.reload();
                } else {
                    alert('‚ùå ' + data.message);
                }
            } catch (error) {
                console.error(error);
                alert('Erreur lors de la d√©tection');
            } finally {
                loadingDiv.remove();
            }
        }

        // Valider une d√©tection
        async function validateDetection(detectionId) {
            try {
                const res = await fetch(`/recurrences/api/detections/${detectionId}/validate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await res.json();

                if (data.success) {
                    const card = document.getElementById(`detection-${detectionId}`);
                    card.classList.add('validated');
                    card.querySelector('.status-icon').textContent = '‚úÖ';
                    
                    const actionsDiv = document.getElementById(`actions-${detectionId}`);
                    actionsDiv.innerHTML = '<div class="status-message status-validated">‚úì Valid√©e comme r√©currente</div>';
                    
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    alert('‚ùå ' + data.error);
                }
            } catch (error) {
                console.error(error);
                alert('Erreur lors de la validation');
            }
        }

        // Rejeter une d√©tection
        async function rejectDetection(detectionId) {
            if (!confirm('Voulez-vous vraiment ignorer cette r√©currence ?')) {
                return;
            }

            try {
                const res = await fetch(`/recurrences/api/detections/${detectionId}/reject`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await res.json();

                if (data.success) {
                    const card = document.getElementById(`detection-${detectionId}`);
                    card.classList.add('rejected');
                    card.querySelector('.status-icon').textContent = '‚ùå';
                    
                    const actionsDiv = document.getElementById(`actions-${detectionId}`);
                    actionsDiv.innerHTML = '<div class="status-message status-rejected">‚úó Ignor√©e (trait√©e comme ponctuelle)</div>';
                    
                    setTimeout(() => card.style.display = 'none', 2000);
                } else {
                    alert('‚ùå ' + data.error);
                }
            } catch (error) {
                console.error(error);
                alert('Erreur lors du rejet');
            }
        }

        // Supprimer une r√©currence valid√©e
        async function deleteRecurrence(id) {
            if (!confirm('Voulez-vous vraiment supprimer cette r√©currence ?')) {
                return;
            }

            try {
                const res = await fetch(`/recurrences/api/${id}`, {
                    method: 'DELETE'
                });

                const data = await res.json();

                if (data.success) {
                    alert('‚úÖ R√©currence supprim√©e');
                    window.location.reload();
                } else {
                    alert('‚ùå ' + data.error);
                }
            } catch (error) {
                console.error(error);
                alert('Erreur lors de la suppression');
            }
        }

        // Toggle affichage de toutes les transactions
        function toggleTransactions(detectionId) {
            alert('Fonctionnalit√© √† impl√©menter : afficher toutes les transactions');
        }
    </script>
</body>
</html>