        // Calculer les stats r√©current/variable selon la p√©riode
        function calculateRecurringStats(period) {
            const filteredTransactions = filterTransactionsByPeriod(transactions, period);
            
            // S√©parer r√©current vs variable
            const recurringTransactions = filteredTransactions.filter(tx => recurringTxIds.includes(tx.id));
            const variableTransactions = filteredTransactions.filter(tx => !recurringTxIds.includes(tx.id));
            
            // Calculer les totaux
            let revenusRecurrents = 0;
            let revenusVariables = 0;
            let depensesRecurrentes = 0;
            let depensesVariables = 0;
            
            recurringTransactions.forEach(tx => {
                const montant = parseFloat(tx.montant);
                if (tx.nature === 'revenu') {
                    revenusRecurrents += montant;
                } else {
                    depensesRecurrentes += Math.abs(montant);
                }
            });
            
            variableTransactions.forEach(tx => {
                const montant = parseFloat(tx.montant);
                if (tx.nature === 'revenu') {
                    revenusVariables += montant;
                } else {
                    depensesVariables += Math.abs(montant);
                }
            });
            
            const totalRevenus = revenusRecurrents + revenusVariables;
            const totalDepenses = depensesRecurrentes + depensesVariables;
            const tauxCouverture = depensesRecurrentes > 0 ? (revenusRecurrents / depensesRecurrentes * 100) : 0;
            const resteAVivre = revenusRecurrents - depensesRecurrentes;
            const soldeMensuel = totalRevenus - totalDepenses;
            const risqueDecouvert = revenusRecurrents - depensesRecurrentes;
            
            return {
                revenusRecurrents,
                revenusVariables,
                depensesRecurrentes,
                depensesVariables,
                totalRevenus,
                totalDepenses,
                tauxCouverture,
                resteAVivre,
                soldeMensuel,
                risqueDecouvert
            };
        }
        
